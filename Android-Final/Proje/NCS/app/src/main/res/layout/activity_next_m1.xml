<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkBlue"
    tools:context=".NcsActivity">

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Kozah Nobody- Ncs Release"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@id/imView1"
        />
    <ImageView
        android:id="@+id/imView1"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ncsa"
        />
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:layout_below="@id/txtView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />
    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/prewBtn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:background="@drawable/btn_bg"/>
        <ImageButton
            android:id="@+id/playBtn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/btn_bg"/>
        <ImageButton
            android:id="@+id/nextBtn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:background="@drawable/btn_bg"/>





    </LinearLayout>
    <TextView
        android:id="@+id/btnLogout2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Çıkış Yap.!"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />



</RelativeLayout>

