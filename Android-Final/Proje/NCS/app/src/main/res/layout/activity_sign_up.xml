<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/friut"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ncsa"
        />

    <ProgressBar
        android:id="@+id/progress2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerBtn"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/progressBarTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/progress2"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="E-Posta Adresi"
        android:layout_marginTop="30dp"
        android:layout_below="@id/imageView"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />
    <EditText
        android:id="@+id/passwd"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Şifre"
        android:layout_marginTop="30dp"
        android:layout_below="@id/email"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/againPasswd"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Şifre Tekrar"
        android:layout_marginTop="30dp"
        android:layout_below="@id/passwd"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Kaydı Tamamla"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/againPasswd"
        android:background="@color/cyan"
        />


</RelativeLayout>